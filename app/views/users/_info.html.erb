<table class='table'>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>
      <%= link_to follows_user_path(user) do %>
      <h6>フォロー<%= user.following_user.count %></h6>
      <% end %>
    </th>
    <th></th>
  </tr>
  <tr>
    <th></th>
    <th> <%= link_to followers_user_path(user) do %>
     <h6>フォロワー<%= user.follower_user.count %></h6></th>
    <% end %>
  </tr>
  <tr>

        <% if current_user != user %>
           <% if current_user.following?(user) %>
            <%= link_to 'フォロー外す', relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
           <% else %>
            <%= link_to 'フォローする', relationships_path(user.id), method: :post, class:"btn-sm btn-success" %>
           <% end %>
         <% end %>

  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>