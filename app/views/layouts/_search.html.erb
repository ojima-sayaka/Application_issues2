<% if user_signed_in? %>
  <div class='row'>
    <div class='mx-auto'>
         <%= form_tag(search_path, method: :get) do %>
           <%= select_tag 'range', options_for_select([['---選択してください---', ''], ['User', '1'], ['Book', '2']]) %>
           <%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
           <%= text_field_tag (:word) %>
           <%= submit_tag "検索" %>
         <% end %>
    </div>
  </div>
<% else %>
<% end %>